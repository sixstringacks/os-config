! Black color that will not be affected by bold highlighting.
*.color66: #0c0d0e
*color66:  #0c0d0e

! Xclock colors.
XClock*foreground: #b7b8b9
XClock*background: #0c0d0e
XClock*majorColor:  rgba:fc/fd/fe/ff
XClock*minorColor:  rgba:fc/fd/fe/ff
XClock*hourColor:   rgba:fc/fd/fe/ff
XClock*minuteColor: rgba:fc/fd/fe/ff
XClock*secondColor: rgba:fc/fd/fe/ff

! Set depth to make transparency work.
URxvt*depth: 32

! Adjusting the font
xterm*faceName: NotoMono-Regular
xterm*faceSize: 7


! Adding a scroll-bar on the right side
xterm*scrollBar: false
xterm*rightScrollBar:false
 
! prevent jumping back to the last line with new output
xterm*scrollTtyOutput: false

! Allow copy/paste
XTerm*selectToClipboard: true

XTerm*vt100.translations: #override \
    Shift Ctrl <Key> C: copy-selection(CLIPBOARD) \n\
    Shift Ctrl <Key> V: insert-selection(CLIPBOARD)
